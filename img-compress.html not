    <script>
        // Set current year in footer
        document.getElementById('year').textContent = new Date().getFullYear();
        
        // DOM elements
        const uploadArea = document.getElementById('upload-area');
        const fileInput = document.getElementById('file-input');
        const compressionSlider = document.getElementById('compression-level');
        const compressionValue = document.getElementById('compression-value');
        const compressBtn = document.getElementById('compress-btn');
        const resetBtn = document.getElementById('reset-btn');
        const spinner = document.getElementById('spinner');
        const resultsSection = document.getElementById('results');
        const originalImage = document.getElementById('original-image');
        const compressedImage = document.getElementById('compressed-image');
        const originalSize = document.getElementById('original-size');
        const compressedSize = document.getElementById('compressed-size');
        const originalDimensions = document.getElementById('original-dimensions');
        const compressedDimensions = document.getElementById('compressed-dimensions');
        const reductionPercent = document.getElementById('reduction-percent');
        const savedKb = document.getElementById('saved-kb');
        const qualityRetained = document.getElementById('quality-retained');
        const downloadBtn = document.getElementById('download-btn');
        
        // Variables
        let selectedFile = null;
        let compressedFile = null;
        
        // Event listeners
        uploadArea.addEventListener('click', () => fileInput.click());
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.style.borderColor = var(--primary);
        });
        uploadArea.addEventListener('dragleave', () => {
            uploadArea.style.borderColor = var(--light-gray);
        });
        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.style.borderColor = var(--light-gray);
            if (e.dataTransfer.files.length) {
                handleFileSelection(e.dataTransfer.files[0]);
            }
        });
        
        fileInput.addEventListener('change', () => {
            if (fileInput.files.length) {
                handleFileSelection(fileInput.files[0]);
            }
        });
        
        compressionSlider.addEventListener('input', () => {
            compressionValue.textContent = `${compressionSlider.value}%`;
        });
        
        compressBtn.addEventListener('click', compressImage);
        resetBtn.addEventListener('click', resetTool);
        
        // Functions
        function handleFileSelection(file) {
            // Check if file is an image
            if (!file.type.match('image.*')) {
                alert('Please select an image file (JPG, PNG, or WebP)');
                return;
            }
            
            // Check file size (max 10MB)
            if (file.size > 10 * 1024 * 1024) {
                alert('File size exceeds 10MB limit. Please choose a smaller image.');
                return;
            }
            
            selectedFile = file;
            compressBtn.disabled = false;
            
            // Display original image
            const reader = new FileReader();
            reader.onload = (e) => {
                originalImage.src = e.target.result;
                
                // Get image dimensions
                const img = new Image();
                img.onload = function() {
                    originalDimensions.textContent = `${this.width} × ${this.height}px`;
                };
                img.src = e.target.result;
                
                // Display file size
                originalSize.textContent = formatFileSize(file.size);
            };
            reader.readAsDataURL(file);
        }
        
        function compressImage() {
            if (!selectedFile) return;
            
            // Show loading spinner
            spinner.style.display = 'block';
            resultsSection.style.display = 'none';
            
            // Simulate compression (in a real app, you would use actual compression libraries)
            setTimeout(() => {
                const compressionRatio = compressionSlider.value / 100;
                const quality = 1 - (compressionRatio * 0.8); // Keep at least 20% quality
                
                // Create a canvas to "compress" the image
                const img = new Image();
                img.onload = function() {
                    const canvas = document.createElement('canvas');
                    const ctx = canvas.getContext('2d');
                    
                    // Calculate new dimensions (optional: reduce size for higher compression)
                    let width = img.width;
                    let height = img.height;
                    if (compressionRatio > 0.7) {
                        const scale = 1 - (compressionRatio - 0.7) * 0.5;
                        width = Math.floor(img.width * scale);
                        height = Math.floor(img.height * scale);
                    }
                    
                    canvas.width = width;
                    canvas.height = height;
                    ctx.drawImage(img, 0, 0, width, height);
                    
                    // Get output format
                    const format = document.querySelector('input[name="format"]:checked').value;
                    let mimeType = selectedFile.type;
                    if (format !== 'original') {
                        mimeType = `image/${format}`;
                    }
                    
                    // Convert to blob
                    canvas.toBlob((blob) => {
                        compressedFile = blob;
                        
                        // Create object URL for display
                        const compressedUrl = URL.createObjectURL(blob);
                        compressedImage.src = compressedUrl;
                        compressedDimensions.textContent = `${width} × ${height}px`;
                        compressedSize.textContent = formatFileSize(blob.size);
                        
                        // Calculate stats
                        const originalSizeBytes = selectedFile.size;
                        const compressedSizeBytes = blob.size;
                        const sizeReduction = 1 - (compressedSizeBytes / originalSizeBytes);
                        const kbSaved = (originalSizeBytes - compressedSizeBytes) / 1024;
                        
                        // Display stats
                        reductionPercent.textContent = `${Math.round(sizeReduction * 100)}%`;
                        savedKb.textContent = `${Math.round(kbSaved)} KB`;
                        qualityRetained.textContent = `${Math.round(quality * 100)}%`;
                        
                        // Set up download
                        const fileName = selectedFile.name.replace(/\.[^/.]+$/, '');
                        const fileExt = format === 'original' ? selectedFile.name.split('.').pop() : format;
                        downloadBtn.href = compressedUrl;
                        downloadBtn.download = `${fileName}_compressed.${fileExt}`;
                        
                        // Hide spinner and show results
                        spinner.style.display = 'none';
                        resultsSection.style.display = 'block';
                    }, mimeType, quality);
                };
                img.src = URL.createObjectURL(selectedFile);
            }, 1000); // Simulate processing time
        }
        
        function resetTool() {
            selectedFile = null;
            compressedFile = null;
            fileInput.value = '';
            compressBtn.disabled = true;
            originalImage.src = '';
            compressedImage.src = '';
            originalSize.textContent = '-';
            compressedSize.textContent = '-';
            originalDimensions.textContent = '-';
            compressedDimensions.textContent = '-';
            resultsSection.style.display = 'none';
            compressionSlider.value = 70;
            compressionValue.textContent = '70%';
            document.getElementById('format-original').checked = true;
        }
        
        function formatFileSize(bytes) {
            if (bytes < 1024) return `${bytes} B`;
            else if (bytes < 1048576) return `${(bytes / 1024).toFixed(1)} KB`;
            else return `${(bytes / 1048576).toFixed(1)} MB`;
        }
    </script>
</body>
</html>
